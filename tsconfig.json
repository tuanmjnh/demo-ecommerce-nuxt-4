// https://nuxt.com/docs/guide/concepts/typescript
{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"]
    // "paths": {
    //   "~/*": ["./app/*"],
    //   // "~/*": ["./*"],
    //   "@/*": ["./*"]
    // }
  },
  "include": [
    "env.d.ts",
    ".nuxt/nuxt.d.ts",
    ".nuxt/**/*.ts",
    "**/*",
    "server/**/*",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist", ".output"]
}
